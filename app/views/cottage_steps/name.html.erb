<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 80vh;">
    <div class="col-6">
      <h2 class="fw-medium fs-1">À présent, donnez un titre à votre annonce</h2>
      <p class="text-secondary fs-5">Racontez ce qui rend votre logement unique.</p>
      <%= simple_form_for @cottage, url: wizard_path, html: { class: "h-100"} do |f| %>
        <div class="form">
          <%= f.input :name,
            as: :text,
            required: true,
            label: false,
            input_html: { maxlength: 32, rows: 5, class: "form-control rounded" }
          %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-10"></div>
    <div class="col-2">
      <%= f.submit "Continue", class: "btn bg-black text-white rounded-4 btn w-100 mt-4" %>

    </div>
    <% end %>
  </div>
</div>