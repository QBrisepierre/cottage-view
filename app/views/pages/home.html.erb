<div style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path "background", quality: "auto" %>'); background-size: 100%; background-repeat: no-repeat">
  <div class="container py-5">
    <div class="row mt-5">
      <div class="col-6">
        <h1 class="text-white" style="font-size: 8rem">Explore your place to stay</h1>
      </div>
    </div>
    <div class="row bg-white rounded-4 align-items-center" style="margin-top: 180px;">
      <div class="col-12 p-4" style="height: 90px;">
        <form action="">
          <div class="row justify-content-evenly">
            <div class="col-5">
              <div class="input-group flex-nowrap">
                <span class="input-group-text rounded-4 rounded-end" id="addon-wrapping"><i class="fa-solid fa-magnifying-glass" style="color: #000000;"></i></span>
                <input type="text" class="form-control rounded-4 rounded-start" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Stavanger, Norway">
              </div>
            </div>
            <div class="col-3">
              <div class="d-flex">
                <div class="input-group flex-nowrap">
                  <span class="input-group-text rounded-4 rounded-end" id="addon-wrapping"><i class="fa-regular fa-calendar-days" style="color: #000000;"></i></span>
                  <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Check in">
                </div>
                <input type="text" class="form-control rounded-4 rounded-start" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Check out">
              </div>
            </div>
            <div class="col-2">
              <div class="input-group">
                <span class="input-group-text rounded-4 rounded-end" id="addon-wrapping"><i class="fa-solid fa-people-group" style="color: #000000;"></i></span>
                <select class="form-select rounded-4 rounded-start" id="inputGroupSelect01">
                  <option selected></option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
            </div>
            <div class="col-2">
              <button class="btn btn-primary w-100 rounded-4">Rechercher</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
  <div class="container-fluid mt-5">
    <div class="row">
      <div class="content">
        <div class="cards">
          <% @cottages.each do |cottage| %>
            <%= link_to cottage_path(cottage), class: "text-decoration-none" do %>
              <div class="card">
                <% if cottage.photos.attached? %>
                  <%= cl_image_tag cottage.photos.first.key, quality: "auto", fetch_format: "auto", crop: :fill, aspect_ratio: "1.0", gravity: "auto" %>
                <% end %>
                <p class="pt-2 mb-0 text-truncate" style="max-width: 280px"><%= cottage.name %></p>
                <p class="text-secondary mb-0 text-truncate" style="max-width: 280px"><%= cottage.equipments.sample.name %></p>
                <p class=""><%= cottage.price %>â‚¬ par nuit</p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>






