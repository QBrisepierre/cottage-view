<div class="container py-5">
  <div class="row mt-5">
    <div class="col-6">
      
      <h1 class="text-white" style="font-size: 7.5rem">Explore your place to <span data-controller="typed" data-typed-sentences-value="<%= ['stay', 'unwind', 'uncover', 'escape'] %>"></span></h1>
    </div>
  </div>
  <div class="row bg-white rounded-4 align-items-center" style="margin-top: 180px;">
    <div class="col-12 p-4" style="height: 90px;">
      <div class="row justify-content-evenly">
        <div class="col-10">
          <%= form_with url: cottages_path, method: :get do %>
            <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Type a keyword"
              %>
        </div>
        <div class="col-2">
            <%= submit_tag "Rechercher", name: "", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>