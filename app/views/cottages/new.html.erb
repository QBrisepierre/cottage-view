<div class="container" style="height: 80vh;">
  <%= simple_form_for @cottage, html: { class: "h-100"} do |f| %>
    <div class="row justify-content-center align-items-center" style="height: 50%">
      <div class="col-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#address">
          Address
        </button>

        <!-- Modal -->
        <div class="modal fade" id="address" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h2 class="fw-medium fs-1">Où est situé votre logement ?</h2>
                <p class="text-secondary fs-5">Votre adresse est uniquement communiquée aux voyageurs une fois leur réservation effectuée.</p>
                  <div class="form">
                    <%= f.input :address,
                      required: true,
                      autofocus: true, 
                      label: false,
                      input_html: { autocomplete: "Address" }
                    %>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#rooms">
          Rooms
        </button>

        <!-- Modal -->
        <div class="modal fade" id="rooms" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h2 class="fw-medium fs-1">Donnez les informations principales concernant votre logement</h2>
                <p class="text-secondary fs-5">Vous pourrez ajouter d'autres informations plus tard, comme les types de lit.</p>
                  <div class="form mt-5">
                    <div class="d-flex justify-content-between align-items-center my-4 border-bottom">
                      <p class="fs-5 fw-light">Voyageurs</p>
                      <%= f.input :total_occupancy,
                        collection: 1..10,
                        required: true,
                        autofocus: true, 
                        label: false,
                        selected: 1,
                        input_html: { autocomplete: "Total occupancy" }
                      %>
                    </div>
                    <div class="d-flex justify-content-between align-items-center my-4 border-bottom">
                      <p class="fs-5 fw-light">Chambre</p>
                      <%= f.input :total_bathroom,
                        collection: 1..10,
                        required: true,
                        autofocus: true, 
                        selected: 1,
                        label: false,
                        input_html: { autocomplete: "Total bathroom" }
                      %>
                    </div>
                    <div class="d-flex justify-content-between align-items-center my-4 border-bottom">
                      <p class="fs-5 fw-light">Lits</p>
                      <%= f.input :total_bed,
                        collection: 1..10,
                        required: true,
                        autofocus: true, 
                        selected: 1,
                        label: false,
                        input_html: { autocomplete: "Total bed" }
                      %>
                    </div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                      <p class="fs-5 fw-light">Salle de bains</p>
                      <%= f.input :total_bedroom,
                        collection: 1..10,
                        required: true,
                        autofocus: true, 
                        selected: 1,
                        label: false,
                        input_html: { autocomplete: "Total bedroom" }
                      %>
                    </div>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#equipments">
          Equipments
        </button>

        <!-- Modal -->
        <div class="modal fade" id="equipments" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h2 class="fw-medium fs-1">Indiquez aux voyageurs quels sont les équipements de votre logement</h2>
                <p class="text-secondary fs-5">Vous pourrez ajouter des équipements une fois votre annonce publiée.</p>
                  <div class="form">
                    <%= f.input :equipments,
                      collection: Equipment.all,
                      as: :check_boxes,
                      label: false,
                      input_html: { multiple: true }
                    %>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#photos">
          Photos
        </button>

        <!-- Modal -->
        <div class="modal fade" id="photos" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h2 class="fw-medium fs-1">Ajoutez quelques photos de votre appartement</h2>
                <p class="text-secondary fs-5">Pour commencer, vous aurez besoin de 5 photos. Vous pourrez en ajouter d'autres ou faire des modifications plus tard..</p>
                  <div class="form py-5 px-5 text-center" style="border: 1px dashed rgb(176, 176, 176);">
                    <svg xmlns="http://www.w3.org/2000/svg" height="4em" viewBox="0 0 576 512"><path d="M160 80H512c8.8 0 16 7.2 16 16V320c0 8.8-7.2 16-16 16H490.8L388.1 178.9c-4.4-6.8-12-10.9-20.1-10.9s-15.7 4.1-20.1 10.9l-52.2 79.8-12.4-16.9c-4.5-6.2-11.7-9.8-19.4-9.8s-14.8 3.6-19.4 9.8L175.6 336H160c-8.8 0-16-7.2-16-16V96c0-8.8 7.2-16 16-16zM96 96V320c0 35.3 28.7 64 64 64H512c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H160c-35.3 0-64 28.7-64 64zM48 120c0-13.3-10.7-24-24-24S0 106.7 0 120V344c0 75.1 60.9 136 136 136H456c13.3 0 24-10.7 24-24s-10.7-24-24-24H136c-48.6 0-88-39.4-88-88V120zm208 24a32 32 0 1 0 -64 0 32 32 0 1 0 64 0z"/></svg>
                    <h3 class="mt-3">Faites glisser vos photos ici</h3>
                    <p>Choisissez au moins 5 photos</p>
                    <%= f.input :photos, as: :file, label: false, input_html: { multiple: true, class: "mt-3" } %>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row" style="height: 50%">
      <div class="col-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#name">
          Name
        </button>

        <!-- Modal -->
        <div class="modal fade" id="name" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h2 class="fw-medium fs-1">À présent, donnez un titre à votre annonce</h2>
                <p class="text-secondary fs-5">Racontez ce qui rend votre logement unique.</p>
                  <div class="form">
                    <%= f.input :name,
                      as: :text,
                      required: true,
                      label: false,
                      input_html: { maxlength: 32, rows: 5, class: "form-control rounded" }
                    %>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#description">
          Description
        </button>

        <!-- Modal -->
        <div class="modal fade" id="description" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h2 class="fw-medium fs-1">Créez votre description</h2>
                <p class="text-secondary fs-5">Les titres courts sont généralement les plus efficaces. Ne vous inquiétez pas, vous pourrez toujours le modifier plus tard.</p>
                  <div class="form">
                    <%= f.input :description,
                      as: :text,
                      required: true,
                      label: false,
                      input_html: { maxlength: 70000, minlength: 60, rows: 10, class: "form-control rounded" }
                    %>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#price">
          Price
        </button>

        <!-- Modal -->
        <div class="modal fade" id="price" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h2 class="fw-medium fs-1">Donnez nous votre prix</h2>
                <p class="text-secondary fs-5">Le prix definis le coût d'une nuit passé dans votre chalêt</p>
                  <div class="form">
                    <%= f.input :price,
                      required: true,
                      label: false,
                      input_html: { class: "form-control rounded" }
                    %>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-10"></div>
      <div class="col-2">
        <%= f.submit "Create", class: "btn bg-black text-white rounded-4 btn w-100 mt-4" %>
      </div>
    </div>
  <% end %>
</div>
