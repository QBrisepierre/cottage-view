<div class="container" style="height: 80vh">
  <div class="row h-100">
    <div class="col">
      <h2 class="fw-bold">Create cottage</h2>
      <%= simple_form_for @cottage, html: { class: "h-100"} do |f| %>
        <%= render @cottage.current_step, f: f%>   
    </div>       
  </div>
  <div class="row">
    <div class="col-2 align-self-end">
      <div class="form-actions">
        <%= f.submit "Create", class: "btn bg-black text-white rounded-4 btn w-100 mt-4" %>
      </div>
    </div>
  </div>
      <% end %>
</div>