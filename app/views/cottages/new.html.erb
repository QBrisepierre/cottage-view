<div class="container-fluid">
    <div class="col-12">
      <div class="container">
        <h2 class="fw-bold">Create cottage</h2>

        <%= simple_form_for(@cottage) do |f| %>

          <div class="form-inputs">
            <%= f.input :name,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: "Name",
                        input_html: { autocomplete: "name" }%>
            <%= f.input :description,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: "Description",
                        input_html: { autocomplete: "description" }%>
            <%= f.input :equipments,
                        collection: Equipment.all,
                        as: :check_boxes,
                        input_html: { multiple: true } %>
          </div>

          <div class="form-actions">
            <%= f.submit "Create", class: "btn btn-primary rounded-4 btn-lg w-100 mt-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
