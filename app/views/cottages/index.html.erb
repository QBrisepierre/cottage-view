<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-lg-7">
      <div class="content">
        <div class="cards">
          <% @cottages.each do |cottage| %>
            <%= link_to cottage_path(cottage), class: "text-decoration-none" do %>
              <div class="card">
                <% if cottage.photos.attached? %>
                  <%= cl_image_tag cottage.photos.first.key, quality: "auto", fetch_format: "auto", crop: :fill, aspect_ratio: "1.0", gravity: "auto" %>
                <% end %>
                <p class="pt-2 mb-0"><%= cottage.name %></p>
                <p class="text-secondary mb-0"><%= cottage.equipments.sample.name %></p>
                <p class=""><%= cottage.price %>â‚¬ par nuit</p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-5 mb-5 position-sticky sticky-top" style="height: 100vh">
      <div style="width: 100%; height: 100%;" class=""
        data-controller="mapindex"
        data-mapindex-markers-value="<%= @markers.to_json %>"
        data-mapindex-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>